# Flags passed to make
_common_make_flags=(
	"BOOT_DIR=${_boot_dir}"
	"EFI_DIR=${_efi_dir}"
	"EFI_MOUNTPOINT=${_efi_mountpoint}"
	"XEN_VENDORVERSION=-${pkgrel}arch"
)

