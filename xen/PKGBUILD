# Build Options
_build_stubdom=${build_stubdom:-false}
_boot_dir=${boot_dir:-/boot}
_efi_dir=${efi_dir:-/boot}
_efi_mountpoint=${efi_mountpoint:-/boot}

# External files used by Xen
# Check http://xenbits.xen.org/xen-extfiles/ for updates
